<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eghm.mapper.SmsTemplateMapper">
    <select id="getByPage" resultType="com.eghm.vo.template.SmsTemplateResponse">
        select
            id,
            nid,
            content,
            remark,
            update_time
        from sms_template
        <where>
            <if test="queryName != null and queryName != ''">
                nid like concat('%', #{queryName, typeHandler=com.eghm.handler.mysql.LikeTypeHandler}, '%')
            </if>
        </where>
        order by id desc
    </select>
</mapper>