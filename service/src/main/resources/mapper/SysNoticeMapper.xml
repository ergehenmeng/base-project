<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eghm.mapper.SysNoticeMapper">

    <select id="getTopList" resultType="com.eghm.model.SysNotice">
        select id, title
        from sys_notice
        where state = 1
          and deleted = false
        order by update_time desc limit #{noticeLimit}
    </select>

</mapper>