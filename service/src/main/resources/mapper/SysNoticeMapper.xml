<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eghm.mapper.SysNoticeMapper">
    <resultMap id="BaseResultMap" type="com.eghm.model.SysNotice">
        <!--
          @create by mybatis
        -->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="classify" jdbcType="TINYINT" property="classify"/>
        <result column="deleted" jdbcType="BIT" property="deleted"/>
        <result column="add_time" jdbcType="TIMESTAMP" property="addTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="state" jdbcType="TINYINT" property="state"/>
    </resultMap>
    <select id="getTopList" resultMap="BaseResultMap">
        select id, title
        from sys_notice
        where state = 1
          and deleted = false
        order by update_time desc limit #{noticeLimit}
    </select>

</mapper>