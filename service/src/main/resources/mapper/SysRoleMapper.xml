<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eghm.mapper.SysRoleMapper">
    <resultMap id="BaseResultMap" type="com.eghm.model.SysRole">
        <!--
          @create by mybatis
        -->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="role_name" jdbcType="VARCHAR" property="roleName"/>
        <result column="role_type" jdbcType="VARCHAR" property="roleType"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="deleted" jdbcType="BIT" property="deleted"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
    </resultMap>
    <select id="getRoleList" resultMap="BaseResultMap">
        select t.id, t.role_name, t.role_type, t.remark
        from sys_role t
        left join sys_operator_role r on t.id = r.role_id
        where r.operator_id = #{operatorId}
          and t.deleted = false order by r.id desc
    </select>

    <select id="getRoleMenu" resultType="long">
        select menu_id
        from sys_role_menu
        where role_id = #{roleId}
    </select>

    <delete id="deleteRoleMenu">
        delete
        from sys_role_menu
        where role_id = #{roleId}
    </delete>

    <insert id="batchInsertRoleMenu">
        insert into sys_role_menu (role_id,menu_id) values
        <foreach collection="menuIdList" item="item" separator=",">
            (#{roleId},#{item})
        </foreach>
    </insert>

    <select id="countByRoleType" resultType="int">
        select count(t.id)
        from sys_role t
        left join sys_operator_role r on t.id = r.role_id
        where r.operator_id = #{operatorId}
          and t.deleted = false and t.role_type = #{roleType}
    </select>
</mapper>