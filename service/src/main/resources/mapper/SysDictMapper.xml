<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eghm.mapper.SysDictMapper">

    <select id="getList" resultMap="pageList" parameterType="com.eghm.dto.sys.dict.DictQueryRequest">
        select t.id, t.title, t.nid, t.dict_type, t.remark, t.create_time, r.id as rid, r.show_value, r.hidden_value
        from sys_dict t
        left join sys_dict_item r on t.nid = r.nid and r.deleted = false
        where t.deleted = false
        <if test="dictType != null">
            and t.dict_type = #{dictType}
        </if>
        <if test="queryName != null and queryName != '' ">
            and (t.title like concat('%', #{queryName, typeHandler=LikeTypeHandler}, '%')  or
                 t.nid like concat('%', #{queryName, typeHandler=LikeTypeHandler}, '%'))
        </if>
        order by t.id desc, r.hidden_value
    </select>

    <resultMap id="pageList" type="com.eghm.vo.sys.dict.DictResponse">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="nid" column="nid"/>
        <result property="dictType" column="dict_type"/>
        <result property="remark" column="remark"/>
        <result property="createTime" column="create_time"/>
        <collection property="itemList" ofType="com.eghm.vo.sys.dict.DictItemResponse">
            <id property="id" column="rid"/>
            <result property="hiddenValue" column="hidden_value"/>
            <result property="showValue" column="show_value"/>
        </collection>
    </resultMap>
</mapper>